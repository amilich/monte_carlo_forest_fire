;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; Components
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

    (role w)
    (role b) 

    (index 1)
    (index 2)
    (index 3)
    (index 4)
    (index 5)

    (<= (base (cell ?r ?c x)) (index ?r) (index ?c))
    (<= (base (cell ?r ?c b)) (index ?r) (index ?c))

    (base (control w))
    (base (control b))

    (<= (input ?r (mark ?m ?n)) (role ?r) (index ?m) (index ?n))
    (<= (input ?r noop) (role ?r))

    (base (won w))
    (base (won b))
    (base (won 1))
  
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; Init States
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    (init (cell 1 1 b))
    (init (cell 1 2 b))
    (init (cell 1 3 b))
    (init (cell 1 4 b))
    (init (cell 1 5 b))

    (init (cell 2 1 b))
    (init (cell 2 2 b))
    (init (cell 2 3 b))
    (init (cell 2 4 b))
    (init (cell 2 5 b))

    (init (cell 3 1 b))
    (init (cell 3 2 b))
    (init (cell 3 3 b))
    (init (cell 3 4 b))
    (init (cell 3 5 b))

    (init (cell 4 1 b))
    (init (cell 4 2 b))
    (init (cell 4 3 b))
    (init (cell 4 4 b))
    (init (cell 4 5 b))

    (init (cell 5 1 b))
    (init (cell 5 2 b))
    (init (cell 5 3 b))
    (init (cell 5 4 b))
    (init (cell 5 5 b))
    (init (control w))

    (init (won 1))
    
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; Legal States
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
        
    (<= (legal ?w (mark ?x ?y))
        (true (cell ?x ?y b))
        (true (control ?w)))
    
    (<= (legal w noop)
        (true (control b)))
    
    (<= (legal b noop)
        (true (control w)))
    
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; Next States
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

    (<= (next (cell ?m ?n x))
        (does w (mark ?m ?n))
        (true (cell ?m ?n b)))

    (<= (next (cell ?m ?n x))
        (does b (mark ?m ?n))
        (true (cell ?m ?n b)))
    
    (<= (next (cell ?m ?n ?w))
        (true (cell ?m ?n ?w))
        (distinct ?w b))
    
    (<= (next (cell ?m ?n b))
        (does ?w (mark ?j ?k))
        (true (cell ?m ?n b))
        (distinct ?m ?j))
    
    (<= (next (cell ?m ?n b))
        (does ?w (mark ?j ?k))
        (true (cell ?m ?n b))
        (distinct ?n ?k))
    
    (<= (next (control w))
        (true (control b)))
    
    (<= (next (control b))
        (true (control w)))

    (<= (next (won 1))
        (not (line 1)) (not (line 2)) (not (line 3)))
    
    (<= (row ?m ?x)
        (true (cell ?m 1 ?x))
        (true (cell ?m 2 ?x))
        (true (cell ?m 3 ?x))
        (true (cell ?m 4 ?x))
        (true (cell ?m 5 ?x)))
    
    (<= (column ?n ?x)
        (true (cell 1 ?n ?x))
        (true (cell 2 ?n ?x))
        (true (cell 3 ?n ?x))
        (true (cell 4 ?n ?x))
        (true (cell 5 ?n ?x)))
    
    (<= (diagonal ?x)
        (true (cell 1 1 ?x))
        (true (cell 2 2 ?x))
        (true (cell 3 3 ?x))
        (true (cell 4 4 ?x))
        (true (cell 5 5 ?x)))
    
    (<= (diagonal ?x)
        (true (cell 1 5 ?x))
        (true (cell 2 4 ?x))
        (true (cell 3 3 ?x))
        (true (cell 4 2 ?x))
        (true (cell 5 1 ?x)))    

    (<= (line ?x) (row ?m ?x))
    (<= (line ?x) (column ?m ?x))
    (<= (line ?x) (diagonal ?x))
    
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; Goal states 
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    
    (<= (goal w 100)
        (not (line x)))
    
    (<= (goal w 50)
        (not (line x)))

    (<= (goal w 0)
        (line x))
  
    (<= (goal b 100)
        (line x))

    (<= (goal b 50)
        (not (line x)))

    (<= (goal b 0)
        (not (line x)))
    
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; Terminal State
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    
    (<= terminal
        (line x))

